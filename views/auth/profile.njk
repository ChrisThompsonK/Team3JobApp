{% extends "layout.njk" %}

{% block title %}Profile - Kainos Careers{% endblock %}

{% block content %}
<div class="min-h-screen bg-base-200 py-4">
  <div class="container mx-auto px-6 max-w-4xl">
    <div class="flex justify-center">
      <div class="w-full max-w-md">
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body p-4 text-center">
            <div class="avatar mb-2">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-kainos-primary to-kainos-green flex items-center justify-center mx-auto">
                {{ icon('user', 'h-8 w-8 text-white') | safe }}
              </div>
            </div>
            
            <h2 class="text-lg font-bold text-kainos-primary mb-1">{{ user.email.split('@')[0] | title }}</h2>
            
            <div class="bg-base-200 rounded-lg p-2 mb-3">
              <p class="text-xs font-medium text-kainos-dark flex items-center justify-center gap-1">
                {{ icon('mail', 'h-3 w-3') | safe }}
                {{ user.email }}
              </p>
            </div>

            <div class="mb-3">
              <h3 class="text-sm font-bold text-kainos-primary mb-2">Quick Actions</h3>
              <div class="space-y-1">
                {% if user.role !== 'admin' %}
                <a href="/my-applications" class="btn-kainos w-full text-sm py-2">
                  {{ icon('clipboard-list', 'h-3 w-3') | safe }}
                  <span>My Applications</span>
                </a>
                {% endif %}
                
                <a href="/jobs" class="btn-kainos-outline w-full text-sm py-2">
                  {{ icon('briefcase', 'h-3 w-3') | safe }}
                  <span>Browse Jobs</span>
                </a>
                
                {% if user.role === 'admin' %}
                <a href="/analytics" class="btn-kainos w-full text-sm py-2">
                  {{ icon('bar-chart-3', 'h-3 w-3') | safe }}
                  <span>Analytics</span>
                </a>
                
                <a href="/jobs/new" class="btn-kainos-outline w-full text-sm py-2">
                  {{ icon('plus-circle', 'h-3 w-3') | safe }}
                  <span>Create Job</span>
                </a>
                {% endif %}
              </div>
            </div>

            <form method="POST" action="/auth/logout" class="w-full">
              <button type="submit" class="btn btn-outline btn-error btn-sm w-full text-sm py-2">
                {{ icon('log-out', 'h-3 w-3') | safe }}
                Sign Out
              </button>
            </form>
          </div>
        </div>
        
        <div class="flex justify-center mt-3">
          <a href="/" class="btn-kainos-outline btn-sm text-sm">
            {{ icon('arrow-left', 'h-3 w-3') | safe }}
            Back
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}