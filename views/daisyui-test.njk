{% extends "layout.njk" %}

{% block title %}DaisyUI Component Test - Team 3 Job Application Frontend{% endblock %}

{% block content %}
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-primary mb-2">DaisyUI Component Test</h1>
        <p class="text-base-content/70">Testing various DaisyUI components to ensure proper integration</p>
        <div class="divider"></div>
    </div>

    <!-- Buttons Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Buttons</h2>
        <div class="flex flex-wrap gap-4">
            <button class="btn btn-primary">Primary</button>
            <button class="btn btn-secondary">Secondary</button>
            <button class="btn btn-accent">Accent</button>
            <button class="btn btn-success">Success</button>
            <button class="btn btn-warning">Warning</button>
            <button class="btn btn-error">Error</button>
            <button class="btn btn-ghost">Ghost</button>
            <button class="btn btn-outline">Outline</button>
        </div>
    </div>

    <!-- Cards Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Cards</h2>
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div class="card bg-base-100 shadow-xl">
                <figure>
                    <div class="w-full h-48 bg-gradient-to-br from-primary to-secondary flex items-center justify-center text-primary-content">
                        <span class="text-lg font-bold">Image Placeholder</span>
                    </div>
                </figure>
                <div class="card-body">
                    <h2 class="card-title">Basic Card</h2>
                    <p>This is a basic card with image placeholder.</p>
                    <div class="card-actions justify-end">
                        <button class="btn btn-primary">Action</button>
                    </div>
                </div>
            </div>

            <div class="card bg-primary text-primary-content">
                <div class="card-body">
                    <h2 class="card-title">Colored Card</h2>
                    <p>This card uses the primary color scheme.</p>
                    <div class="card-actions justify-end">
                        <button class="btn btn-secondary">Secondary Action</button>
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h2 class="card-title">
                        Card with Badge
                        <div class="badge badge-secondary">NEW</div>
                    </h2>
                    <p>This card includes a badge in the title.</p>
                    <div class="card-actions justify-end">
                        <div class="badge badge-outline">Fashion</div>
                        <div class="badge badge-outline">Products</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Form Elements Section -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Form Elements</h2>
        <div class="grid gap-6 md:grid-cols-2">
            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h3 class="card-title mb-4">Input Fields</h3>
                    <div class="form-control w-full max-w-xs">
                        <label class="label">
                            <span class="label-text">Text Input</span>
                        </label>
                        <input type="text" placeholder="Type here" class="input input-bordered w-full max-w-xs" />
                    </div>
                    
                    <div class="form-control w-full max-w-xs">
                        <label class="label">
                            <span class="label-text">Select</span>
                        </label>
                        <select class="select select-bordered">
                            <option disabled selected>Pick one</option>
                            <option>Option 1</option>
                            <option>Option 2</option>
                            <option>Option 3</option>
                        </select>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text">Textarea</span>
                        </label>
                        <textarea class="textarea textarea-bordered" placeholder="Your message"></textarea>
                    </div>
                </div>
            </div>

            <div class="card bg-base-100 shadow-xl">
                <div class="card-body">
                    <h3 class="card-title mb-4">Checkboxes & Radio</h3>
                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Checkbox</span>
                            <input type="checkbox" checked="checked" class="checkbox" />
                        </label>
                    </div>
                    
                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Toggle</span>
                            <input type="checkbox" class="toggle" checked />
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Radio Option 1</span>
                            <input type="radio" name="radio-10" class="radio checked:bg-primary" checked />
                        </label>
                    </div>

                    <div class="form-control">
                        <label class="label cursor-pointer">
                            <span class="label-text">Radio Option 2</span>
                            <input type="radio" name="radio-10" class="radio checked:bg-primary" />
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation & Indicators -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Navigation & Indicators</h2>
        
        <!-- Tabs -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Tabs</h3>
            <div class="tabs">
                <a class="tab tab-lifted tab-active">Tab 1</a>
                <a class="tab tab-lifted">Tab 2</a>
                <a class="tab tab-lifted">Tab 3</a>
            </div>
        </div>

        <!-- Breadcrumbs -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Breadcrumbs</h3>
            <div class="text-sm breadcrumbs">
                <ul>
                    <li><a>Home</a></li>
                    <li><a>Documents</a></li>
                    <li>Add Document</li>
                </ul>
            </div>
        </div>

        <!-- Progress -->
        <div class="mb-6">
            <h3 class="text-lg font-semibold mb-2">Progress</h3>
            <progress class="progress progress-primary w-56" value="70" max="100"></progress>
            <progress class="progress progress-secondary w-56" value="40" max="100"></progress>
            <progress class="progress progress-accent w-56" value="90" max="100"></progress>
        </div>
    </div>

    <!-- Alerts & Notifications -->
    <div class="mb-8">
        <h2 class="text-2xl font-semibold mb-4">Alerts & Notifications</h2>
        <div class="space-y-4">
            <div class="alert alert-info">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>New software update available.</span>
            </div>

            <div class="alert alert-success">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Your purchase has been confirmed!</span>
            </div>

            <div class="alert alert-warning">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.864-.833-2.634 0L3.168 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <span>Warning: Invalid email address!</span>
            </div>

            <div class="alert alert-error">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Error! Task failed successfully.</span>
            </div>
        </div>
    </div>

    <!-- Back to Home -->
    <div class="text-center">
        <a href="/" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Back to Home
        </a>
    </div>
{% endblock %}