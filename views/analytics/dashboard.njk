{% extends "layout.njk" %}

{% block title %}{{ title }} - Kainos{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8 max-w-7xl">
  <!-- Page Header -->
  <div class="text-center mb-8">
    <h1 class="text-5xl md:text-6xl font-bold kainos-text-gradient mb-4">Analytics Dashboard</h1>
    <p class="text-lg text-base-content/70">Monitor job application metrics and trends</p>
  </div>

  <!-- Date Selector Card -->
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <h2 class="card-title text-2xl text-kainos-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        Select Date
      </h2>
      <p class="text-base-content/70 mb-4">View application statistics for a specific date</p>
      
      <div class="flex flex-col sm:flex-row gap-4 items-start sm:items-end">
        <div class="form-control flex-1">
          <label class="label">
            <span class="label-text font-semibold">Date</span>
          </label>
          <input 
            type="date" 
            id="dateSelector" 
            value="{{ selectedDate }}"
            max="{{ selectedDate }}"
            class="input input-bordered w-full"
          />
        </div>
        <button onclick="loadAnalytics()" class="btn-kainos shadow-lg hover:shadow-xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
          </svg>
          Refresh
        </button>
        <button onclick="loadToday()" class="btn-kainos-outline shadow-lg hover:shadow-xl">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Today
        </button>
      </div>
    </div>
  </div>

  <!-- Analytics Stats Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <!-- Applications Created -->
    <div class="stats shadow-2xl bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900 dark:to-blue-800 border-t-4 border-blue-500">
      <div class="stat">
        <div class="stat-figure text-blue-600 dark:text-blue-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
        </div>
        <div class="stat-title font-bold text-blue-900 dark:text-blue-100">Applications Created</div>
        <div class="stat-value text-blue-700 dark:text-blue-200" id="applicationsCreated">{{ analytics.applicationsCreatedToday }}</div>
        <div class="stat-desc text-blue-600 dark:text-blue-300">New applications submitted</div>
      </div>
    </div>

    <!-- Applications Hired -->
    <div class="stats shadow-2xl bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900 dark:to-green-800 border-t-4 border-green-500">
      <div class="stat">
        <div class="stat-figure text-green-600 dark:text-green-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title font-bold text-green-900 dark:text-green-100">Applications Hired</div>
        <div class="stat-value text-green-700 dark:text-green-200" id="applicationsHired">{{ analytics.applicationsHiredToday }}</div>
        <div class="stat-desc text-green-600 dark:text-green-300">Successfully hired</div>
      </div>
    </div>

    <!-- Applications Rejected -->
    <div class="stats shadow-2xl bg-gradient-to-br from-orange-50 to-orange-100 dark:from-orange-900 dark:to-orange-800 border-t-4 border-orange-500">
      <div class="stat">
        <div class="stat-figure text-orange-600 dark:text-orange-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title font-bold text-orange-900 dark:text-orange-100">Applications Rejected</div>
        <div class="stat-value text-orange-700 dark:text-orange-200" id="applicationsRejected">{{ analytics.applicationsRejectedToday }}</div>
        <div class="stat-desc text-orange-600 dark:text-orange-300">Not proceeding</div>
      </div>
    </div>

    <!-- Applications Accepted -->
    <div class="stats shadow-2xl bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900 dark:to-purple-800 border-t-4 border-purple-500">
      <div class="stat">
        <div class="stat-figure text-purple-600 dark:text-purple-300">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div class="stat-title font-bold text-purple-900 dark:text-purple-100">Applications Accepted</div>
        <div class="stat-value text-purple-700 dark:text-purple-200" id="applicationsAccepted">{{ analytics.applicationsAcceptedToday }}</div>
        <div class="stat-desc text-purple-600 dark:text-purple-300">Moving forward</div>
      </div>
    </div>
  </div>

  <!-- Summary Card -->
  <div class="card bg-base-100 shadow-xl mb-8">
    <div class="card-body">
      <h2 class="card-title text-2xl text-kainos-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        Application Summary for {{ selectedDate }}
      </h2>
      
      <div class="divider"></div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Activity Overview -->
        <div>
          <h3 class="text-lg font-semibold text-kainos-primary mb-4">Activity Overview</h3>
          <div class="space-y-3">
            <div class="flex justify-between items-center p-3 bg-base-200 rounded-lg">
              <span class="font-medium">Total Applications</span>
              <span class="badge badge-lg bg-kainos-primary text-white" id="totalApplications">{{ analytics.totalApplicationsToday }}</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-base-200 rounded-lg">
              <span class="font-medium">Conversion Rate</span>
              <span class="badge badge-lg bg-kainos-green text-white" id="conversionRate">-</span>
            </div>
            <div class="flex justify-between items-center p-3 bg-base-200 rounded-lg">
              <span class="font-medium">Rejection Rate</span>
              <span class="badge badge-lg bg-orange-500 text-white" id="rejectionRate">-</span>
            </div>
          </div>
        </div>

        <!-- Visual Progress -->
        <div>
          <h3 class="text-lg font-semibold text-kainos-primary mb-4">Application Status Distribution</h3>
          <div class="space-y-4">
            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Hired</span>
                <span id="hiredPercentage">0%</span>
              </div>
              <progress class="progress progress-success w-full" value="0" max="100" id="hiredProgress"></progress>
            </div>
            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Rejected</span>
                <span id="rejectedPercentage">0%</span>
              </div>
              <progress class="progress progress-warning w-full" value="0" max="100" id="rejectedProgress"></progress>
            </div>
            <div>
              <div class="flex justify-between text-sm mb-1">
                <span>Accepted</span>
                <span id="acceptedPercentage">0%</span>
              </div>
              <progress class="progress progress-info w-full" value="0" max="100" id="acceptedProgress"></progress>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Google Analytics Info Card -->
  <div class="alert shadow-lg bg-gradient-to-r from-kainos-light to-base-100 border-l-4 border-kainos-primary">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-kainos-primary shrink-0 w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <div>
      <h3 class="font-bold text-kainos-primary">Google Analytics Integration</h3>
      <div class="text-sm text-base-content/70">This data is synchronized with Google Analytics. All application events are tracked and can be viewed in your GA4 dashboard for detailed insights and historical trends.</div>
    </div>
    <a href="https://analytics.google.com" target="_blank" class="btn btn-sm btn-kainos">
      View in GA4
    </a>
  </div>
</div>

<script>
// Calculate and update statistics
function updateStatistics() {
  const created = parseInt(document.getElementById('applicationsCreated').textContent);
  const hired = parseInt(document.getElementById('applicationsHired').textContent);
  const rejected = parseInt(document.getElementById('applicationsRejected').textContent);
  const accepted = parseInt(document.getElementById('applicationsAccepted').textContent);
  
  const total = created || 1; // Avoid division by zero
  
  // Calculate percentages
  const hiredPct = ((hired / total) * 100).toFixed(1);
  const rejectedPct = ((rejected / total) * 100).toFixed(1);
  const acceptedPct = ((accepted / total) * 100).toFixed(1);
  
  // Update conversion and rejection rates
  document.getElementById('conversionRate').textContent = hiredPct + '%';
  document.getElementById('rejectionRate').textContent = rejectedPct + '%';
  
  // Update progress bars
  document.getElementById('hiredPercentage').textContent = hiredPct + '%';
  document.getElementById('hiredProgress').value = hiredPct;
  
  document.getElementById('rejectedPercentage').textContent = rejectedPct + '%';
  document.getElementById('rejectedProgress').value = rejectedPct;
  
  document.getElementById('acceptedPercentage').textContent = acceptedPct + '%';
  document.getElementById('acceptedProgress').value = acceptedPct;
}

// Load analytics for selected date
async function loadAnalytics() {
  const dateInput = document.getElementById('dateSelector');
  const selectedDate = dateInput.value;
  
  try {
    const response = await fetch(`/api/analytics?date=${selectedDate}`);
    const data = await response.json();
    
    if (data.success) {
      // Update stats
      document.getElementById('applicationsCreated').textContent = data.data.applicationsCreatedToday;
      document.getElementById('applicationsHired').textContent = data.data.applicationsHiredToday;
      document.getElementById('applicationsRejected').textContent = data.data.applicationsRejectedToday;
      document.getElementById('applicationsAccepted').textContent = data.data.applicationsAcceptedToday;
      document.getElementById('totalApplications').textContent = data.data.totalApplicationsToday;
      
      // Recalculate statistics
      updateStatistics();
    }
  } catch (error) {
    console.error('Error loading analytics:', error);
    alert('Failed to load analytics data. Please try again.');
  }
}

// Load today's data
function loadToday() {
  const today = new Date().toISOString().split('T')[0];
  document.getElementById('dateSelector').value = today;
  loadAnalytics();
}

// Initialize statistics on page load
document.addEventListener('DOMContentLoaded', function() {
  updateStatistics();
});
</script>

{% endblock %}
