{% extends "layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-5xl font-bold text-center flex-1">{{ title }}</h1>
    <a href="/jobs/new" class="btn btn-primary btn-md text-sm">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      Add New Job Role
    </a>
  </div>

  {% if jobRoles.length > 0 %}
    <div class="overflow-x-auto shadow-lg rounded-lg">
      <table class="table w-full min-w-max">
        <!-- head -->
        <thead class="bg-base-200">
          <tr>
            <th class="w-16 text-left px-4 py-4 text-lg font-semibold">ID</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Job Name</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Location</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Capability</th>
            <th class="w-20 text-left px-4 py-4 text-lg font-semibold">Band</th>
            <th class="w-60 text-left px-4 py-4 text-lg font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for job in jobRoles %}
            <!-- row {{ loop.index }} -->
            <tr class="hover:bg-base-100 border-b border-base-300">
              <th class="font-medium px-4 py-7 text-lg">{{ job.id }}</th>
              <td class="font-medium px-4 py-7 text-lg">{{ job.name }}</td>
              <td class="text-base-content/70 px-4 py-8 text-lg">{{ job.location }}</td>
              <td class="text-base-content/70 px-4 py-8 text-lg">{{ job.capability }}</td>
              <td class="text-base-content/70 px-4 py-4 text-lg">{{ job.band }}</td>
              <td class="px-4 py-4">
                <div class="flex gap-2">
                  <a href="/jobs/{{ job.id }}/details" class="btn btn-secondary btn-sm text-base whitespace-nowrap">
                    View Details
                  </a>
                  <a href="/jobs/{{ job.id }}/apply" class="btn btn-primary btn-sm text-base whitespace-nowrap">
                    Apply
                  </a>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% else %}
    <div class="alert alert-info">
      <span>No job roles found.</span>
    </div>
  {% endif %}
</div>
<div class="mt-8 text-center">
    <a href="/" class="btn btn-primary btn-sm text-base">‚Üê Back to Home</a>
  </div>
{% endblock %}