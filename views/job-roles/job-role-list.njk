{% extends "layout.njk" %}

{% block title %}{{ title }} - Kainos{% endblock %}

{% block content %}
<div class="w-full max-w-7xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-4">
    <div class="flex-1">
      <h1 class="text-5xl font-bold text-center kainos-text-gradient">{{ title }}</h1>
    </div>
    <div class="flex flex-col gap-2">
      <a href="/jobs/new" class="bg-blue-800 hover:bg-blue-900 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 no-underline flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
        </svg>
        Add New Job Role
      </a>
      <a href="/jobs/report" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 no-underline flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        Report
      </a>
    </div>
  </div>
  <p class="text-center text-lg text-base-content/70 mb-8">Discover exciting career opportunities at Kainos</p>

  {% if jobRoles.length > 0 %}
    <div class="shadow-lg rounded-lg w-full">
      <table class="table w-full">
        <!-- head -->
        <thead class="bg-base-200">
          <tr>
            <th class="w-16 text-left px-4 py-4 text-lg font-semibold">ID</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Job Name</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Location</th>
            <th class="text-left px-4 py-4 text-lg font-semibold">Capability</th>
            <th class="w-20 text-left px-4 py-4 text-lg font-semibold">Band</th>
            <th class="w-40 text-left px-4 py-4 text-lg font-semibold">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for job in jobRoles %}
            <!-- row {{ loop.index }} -->
            <tr class="hover:bg-base-100 border-b border-base-300">
              <th class="font-medium px-4 py-7 text-lg">{{ job.id }}</th>
              <td class="font-medium px-4 py-7 text-lg">{{ job.name }}</td>
              <td class="text-base-content/70 px-4 py-8 text-lg">{{ job.location }}</td>
              <td class="text-base-content/70 px-4 py-8 text-lg">{{ job.capability }}</td>
              <td class="text-base-content/70 px-4 py-4 text-lg">{{ job.band }}</td>
              <td class="px-4 py-4">
                <div class="flex gap-2 flex-wrap">
                  <a href="/jobs/{{ job.id }}/details" class="bg-blue-800 hover:bg-blue-900 text-white font-semibold px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 no-underline text-center text-sm whitespace-nowrap inline-block">
                    View Details
                  </a>
                  <a href="/jobs/{{ job.id }}/edit" class="bg-blue-700 hover:bg-blue-800 text-white font-semibold px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 no-underline text-center text-sm whitespace-nowrap inline-block">
                    Edit
                  </a>
                  <a href="/jobs/{{ job.id }}/apply" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 no-underline text-center text-sm whitespace-nowrap inline-block">
                    Apply
                  </a>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% else %}
    <div class="alert alert-info">
      <span>No job roles found.</span>
    </div>
  {% endif %}
</div>
<div class="mt-8 flex justify-center">
    <a href="/" class="bg-blue-800 hover:bg-blue-900 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:shadow-lg transition-all duration-200 hover:scale-105 min-w-[140px] no-underline text-center">‚Üê Back to Home</a>
  </div>
{% endblock %}