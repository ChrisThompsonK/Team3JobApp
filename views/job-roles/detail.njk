{% extends "layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">{{ jobRole.name }}</h1>
  
  <div class="mb-6">
    <p><strong>Job ID:</strong> {{ jobRole.id }}</p>
    <p><strong>Location:</strong> {{ jobRole.location }}</p>
    <p><strong>Capability:</strong> {{ jobRole.capability }}</p>
    <p><strong>Band Level:</strong> {{ jobRole.band }}</p>
    <p><strong>Closing Date:</strong> {{ jobRole.closingDate.toLocaleDateString() }}</p>
  </div>

  <div class="mt-8">
    <a href="/jobs" class="text-blue-600 underline">‚Üê Back to All Jobs</a> | 
    <a href="/" class="text-blue-600 underline">Home</a>
  </div>
</div>
{% endblock %}