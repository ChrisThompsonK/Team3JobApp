{% extends "layout.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <h1 class="text-2xl font-bold mb-4">{{ title }}</h1>

  {% if jobRoles.length > 0 %}
    <ul>
      {% for job in jobRoles %}
        <li class="mb-4 p-4 border border-gray-300">
          <h2 class="text-lg font-semibold">{{ job.name }}</h2>
          <p>Location: {{ job.location }}</p>
          <p>Capability: {{ job.capability }}</p>
          <p>Band: {{ job.band }}</p>
          <p>Closing Date: {{ job.closingDate.toLocaleDateString() }}</p>
          <a href="/jobs/{{ job.id }}" class="text-blue-600 underline">View Details</a>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <p>No job roles found.</p>
  {% endif %}

  <div class="mt-8">
    <a href="/" class="text-blue-600 underline">‚Üê Back to Home</a>
  </div>
</div>
{% endblock %}