{% extends "layout.njk" %}

{% block title %}{{ title }} - Team 3 Job Application Frontend{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
  <!-- Header -->
  <div class="mb-8">
    <h1 class="text-4xl font-bold text-primary mb-2">{{ title }}</h1>
    <p class="text-base-content/70 mt-2">{{ totalCount }} job{{ 's' if totalCount !== 1 }} available</p>
  </div>

  {% if jobRoles.length > 0 %}
    <!-- Job Cards Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {% for job in jobRoles %}
        <div class="card bg-base-100 shadow-lg hover:shadow-xl transition-shadow">
          <div class="card-body">
            <!-- Job Header -->
            <div class="flex justify-between items-start mb-4">
              <h2 class="card-title text-lg font-semibold">{{ job.name }}</h2>
              <div class="badge badge-primary badge-outline">{{ job.band }}</div>
            </div>

            <!-- Job Details -->
            <div class="space-y-2 mb-4">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="text-sm text-base-content/70">{{ job.location }}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2h8zM16 10h.01M12 10h.01M8 10h.01" />
                </svg>
                <span class="text-sm text-base-content/70">{{ job.capability }}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 6h.01M7 21h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span class="text-sm text-base-content/70">Closes: {{ job.closingDate.toLocaleDateString() }}</span>
              </div>
            </div>

            <!-- Actions -->
            <div class="card-actions justify-end">
              <a href="/jobs/{{ job.id }}" class="btn btn-primary btn-sm">View Details</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% else %}
    <!-- Empty State -->
    <div class="text-center py-12">
      <div class="mx-auto w-24 h-24 mb-4 text-base-content/30">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2h8zM16 10h.01M12 10h.01M8 10h.01" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold mb-2">No job roles found</h3>
      <p class="text-base-content/70 mb-4">
        There are currently no job roles available.
      </p>
    </div>
  {% endif %}

  <!-- Back to Home -->
  <div class="mt-8 text-center">
    <a href="/" class="btn btn-ghost btn-sm">‚Üê Back to Home</a>
  </div>
</div>
{% endblock %}