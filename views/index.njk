{% extends "layout.njk" %}

{% block title %}Welcome - Team 3 Job Application Frontend{% endblock %}

{% block content %}
    <div class="text-center mb-8">
        <h1 class="text-4xl font-bold text-primary mb-2">{{ message }} üåç</h1>
        <div class="divider"></div>
    </div>
    
    <div class="grid gap-6 md:grid-cols-1 lg:grid-cols-2 xl:grid-cols-3">
        <!-- Service Information Card -->
        <div class="card bg-primary text-primary-content shadow-lg">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Service Information
                </h2>
                <div class="space-y-2">
                    <div class="flex justify-between">
                        <span class="font-medium">Service:</span>
                        <span class="badge badge-accent">{{ service }}</span>
                    </div>
                    <div class="flex justify-between">
                        <span class="font-medium">Environment:</span>
                        <span class="badge badge-accent">{{ environment }}</span>
                    </div>
                    <div class="text-sm opacity-80">
                        <strong>Server Time:</strong> {{ timestamp }}
                    </div>
                </div>
            </div>
        </div>

        <!-- Welcome Message Card -->
        <div class="card bg-secondary text-secondary-content shadow-lg">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                    </svg>
                    Welcome Message
                </h2>
                <p>{{ greeting }}</p>
            </div>
        </div>

        <!-- Quick Links Card -->
        <div class="card bg-accent text-accent-content shadow-lg">
            <div class="card-body">
                <h2 class="card-title">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                    </svg>
                    Quick Links
                </h2>
                <div class="card-actions flex-col gap-2">
                    <a href="/health" class="btn btn-primary btn-block btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        </svg>
                        Health Check
                    </a>
                    <a href="/daisyui-test" class="btn btn-accent btn-block btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                        </svg>
                        DaisyUI Test
                    </a>
                    <a href="/" class="btn btn-secondary btn-block btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        Home
                    </a>
                    <a href="/api/health" class="btn btn-info btn-block btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                        </svg>
                        Health API (JSON)
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}