{% extends "layout.njk" %}

{% block title %}Home - Job Portal{% endblock %}

{% block content %}
    <!-- Main Title -->
    <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-primary mb-6">
            Welcome to Job Portal
        </h1>
        <p class="text-lg text-base-content/70 mb-8">
            Find your perfect job opportunity
        </p>
    </div>



    <!-- Simple Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        <div class="card bg-primary text-primary-content shadow-lg">
            <div class="card-body text-center">
                <h2 class="card-title justify-center mb-4">Job Search</h2>
                <p>Browse through available job opportunities</p>
                <div class="card-actions justify-center mt-4">
                    <a href="/jobs" class="btn btn-primary-content">View Jobs</a>
                </div>
            </div>
        </div>

        <div class="card bg-secondary text-secondary-content shadow-lg">
            <div class="card-body text-center">
                <h2 class="card-title justify-center mb-4">System Health</h2>
                <p>Check the current status of our services</p>
                <div class="card-actions justify-center mt-4">
                    <a href="/health" class="btn btn-secondary-content">Check Status</a>
                </div>
            </div>
        </div>
    </div>


{% endblock %}