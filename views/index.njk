{% extends "layout.njk" %}

{% block title %}Home - Kainos Job Portal{% endblock %}

{% block head %}
<link rel="stylesheet" href="/css/index.css">
{% endblock %}

{% block content %}
    <!-- Main Title - Navy blue and green theme -->
    <div class="text-center mb-16">
        <div class="mb-8">
            <img src="/images/kainos-logo.svg" alt="Kainos" class="h-16 w-auto mx-auto mb-6">
        </div>
        <h1 class="text-5xl font-bold text-kainos-primary mb-6 leading-tight">
            True partners change the <br>
            <span class="text-kainos-accent">world together</span>
        </h1>
        <p class="text-xl text-gray-700 mb-12 max-w-3xl mx-auto">
            We're on a mission to make people's lives better through technology. 
            Join our team and discover unlimited career opportunities.
        </p>
    </div>

    <!-- Job Search Card - Clean design -->
    <div class="flex justify-center">
        <div class="bg-white rounded-xl shadow-lg border border-gray-200 max-w-lg w-full p-8">
            <div class="text-center">
                <h2 class="text-2xl font-semibold text-kainos-primary mb-4">Find Your Next Role</h2>
                <p class="text-gray-600 mb-8">Discover exciting career opportunities at Kainos</p>
                
                <!-- Capability Dropdown -->
                <div class="mb-6">
                    <select 
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-kainos-accent focus:border-transparent text-gray-700" 
                        id="jobCapabilitySelect"
                    >
                        <option value="">All Capabilities</option>
                        <option value="Engineering">Engineering</option>
                        <option value="Product">Product</option>
                        <option value="Design">Design</option>
                        <option value="Data & Analytics">Data & Analytics</option>
                        <option value="Business Analysis">Business Analysis</option>
                        <option value="Delivery">Delivery</option>
                        <option value="Cyber Security">Cyber Security</option>
                        <option value="Quality Assurance">Quality Assurance</option>
                        <option value="DevOps">DevOps</option>
                    </select>
                </div>

                <div class="space-y-3">
                    <button onclick="searchJobsByCapability()" class="btn-kainos block w-full py-3 text-center rounded-lg font-medium">Filter Jobs by Capability</button>
                    <a href="/jobs" class="btn-kainos block w-full py-3 text-center rounded-lg font-medium">Browse All Jobs</a>
                    <a href="/health" class="block w-full py-3 text-center text-gray-600 hover:text-kainos-primary transition-colors">System Health</a>
                </div>
            </div>
        </div>
    </div>

    <script src="/js/job-search.js"></script>

{% endblock %}