{% extends "layout.njk" %}

{% block title %}Health Check - Team 3 Job Application Frontend{% endblock %}

{% block content %}
    <h1 class="text-gray-800 border-b-4 border-green-500 pb-2 mb-6">Health Check ✅</h1>
    
    <div class="bg-green-50 border-l-4 border-green-500 p-4 my-5 rounded-r">
        <h3 class="text-lg font-semibold mb-3 text-gray-800">System Status</h3>
        <p class="mb-2"><strong>Status:</strong> <span class="text-green-600 font-semibold">{{ status }}</span></p>
        <p class="mb-2"><strong>Uptime:</strong> {{ uptime }} seconds</p>
        <p class="text-gray-600 text-sm"><strong>Last Check:</strong> {{ timestamp }}</p>
    </div>

    <div class="bg-gray-50 border-l-4 border-blue-600 p-4 my-5 rounded-r">
        <h3 class="text-lg font-semibold mb-3 text-gray-800">Navigation</h3>
        <p><a href="/" class="text-blue-600 hover:text-blue-800 underline">← Back to Home</a></p>
    </div>
{% endblock %}