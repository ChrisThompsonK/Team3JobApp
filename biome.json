{
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"useLiteralKeys": "off"
			}
		}
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"includes": ["src/**/*", "*.ts", "*.js", "*.json"],
		"experimentalScannerIgnores": ["dist/**", "node_modules/**", "public/**"]
	}
}
