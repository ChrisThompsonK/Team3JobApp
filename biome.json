{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedVariables": "error",
        "noUndeclaredVariables": "error"
      },
      "suspicious": {
        "noDebugger": "error"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "style": {},
      "a11y": {},
      "performance": {},
      "security": {},
      "nursery": {}
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  }
}
