{
  "name": "kainos-job-portal-frontend",
  "version": "1.0.0",
  "description": "Kainos Job Portal - Connecting talent with opportunity",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:css": "tailwindcss -i src/styles/input.css -o public/css/output.css",
    "build:css:watch": "tailwindcss -i src/styles/input.css -o public/css/output.css --watch",
    "build:css:prod": "tailwindcss -i src/styles/input.css -o public/css/output.css --minify",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:integration:watch": "vitest watch tests/integration",
    "test:integration:ui": "vitest --ui tests/integration",
    "test:e2e": "NODE_OPTIONS='--import=tsx' cucumber-js tests/e2e --require 'tests/e2e/support/**/*.ts' --require 'tests/e2e/step_definitions/**/*.ts'",
    "test:e2e:headed": "cucumber-js tests/e2e --format progress-bar",
    "test:e2e:report": "cucumber-js tests/e2e --format html:cucumber-report.html",
    "test:pom:run": "playwright test",
    "test:pom:headed": "playwright test --headed",
    "test:pom:ui": "playwright test --ui",
    "test:all": "npm run test:run && npm run test:e2e && npm run test:pom:run",
    "test:all:with-report": "npm run test:all && npm run test:report && npm run test:ui",
    "test:report": "tsx scripts/test-report-generator.ts",
    "slides": "slidev slides.md",
    "slides:build": "slidev build slides.md",
    "slides:export": "slidev export slides.md",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "docker:run": "bash docker-run.sh"
  },
  "keywords": [
    "kainos",
    "careers",
    "typescript",
    "node",
    "job-portal",
    "frontend",
    "digital-transformation"
  ],
  "author": "Kainos",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@cucumber/cucumber": "^9.5.1",
    "@playwright/test": "^1.56.1",
    "@slidev/cli": "^52.7.0",
    "@slidev/theme-default": "^0.25.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/method-override": "^3.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.24",
    "@types/nunjucks": "^3.2.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "daisyui": "^5.1.26",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "axios": "^1.12.2",
    "better-auth": "^1.3.27",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-static": "^0.546.0",
    "method-override": "^3.0.0",
    "multer": "^2.0.2",
    "nunjucks": "^3.2.4",
    "playwright": "^1.56.1",
    "uuid": "^13.0.0"
  }
}
