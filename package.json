{
  "name": "team3-job-app-frontend",
  "version": "1.0.0",
  "description": "Team 3 Job Application Frontend",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:css": "tailwindcss -i src/styles/input.css -o public/css/output.css",
    "build:css:watch": "tailwindcss -i src/styles/input.css -o public/css/output.css --watch",
    "build:css:prod": "tailwindcss -i src/styles/input.css -o public/css/output.css --minify",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome check .",
    "lint": "biome lint --write .",
    "lint:check": "biome lint .",
    "check": "biome check --write .",
    "check:ci": "biome check --no-errors-on-unmatched .",
    "ci": "biome ci .",
    "lint:fix": "biome check --write --unsafe .",
    "prepare": "husky",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "typescript",
    "node",
    "job-application",
    "frontend"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/cli": "^4.1.13",
    "@types/express": "^5.0.3",
    "@types/node": "^20.11.17",
    "@types/nunjucks": "^3.2.6",
    "@types/uuid": "^10.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "daisyui": "^5.1.26",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "express": "^5.1.0",
    "nunjucks": "^3.2.4",
    "uuid": "^13.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "biome check --write --no-errors-on-unmatched",
      "biome format --write"
    ],
    "*.{json,md}": [
      "biome format --write"
    ]
  }
}
