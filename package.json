{
  "name": "kainos-job-portal-frontend",
  "version": "1.0.0",
  "description": "Kainos Job Portal - Connecting talent with opportunity",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:css": "tailwindcss -i src/styles/input.css -o public/css/output.css",
    "build:css:watch": "tailwindcss -i src/styles/input.css -o public/css/output.css --watch",
    "build:css:prod": "tailwindcss -i src/styles/input.css -o public/css/output.css --minify",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "keywords": [
    "kainos",
    "careers",
    "typescript",
    "node",
    "job-portal",
    "frontend",
    "digital-transformation"
  ],
  "author": "Kainos",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/method-override": "^3.0.0",
    "@types/node": "^20.11.17",
    "@types/nunjucks": "^3.2.6",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.6.0",
    "daisyui": "^5.1.26",
    "drizzle-kit": "^0.31.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.3.27",
    "better-sqlite3": "^12.4.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "method-override": "^3.0.0",
    "nunjucks": "^3.2.4",
    "uuid": "^13.0.0"
  }
}
