# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
NODE_ENV=development
PORT=3000

# API Settings
API_BASE_URL=http://localhost:8000
API_TIMEOUT=5000

# Database
DATABASE_URL=./app.db

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ========================================
# AUTHENTICATION - ALL REQUIRED
# ========================================
# These environment variables are REQUIRED for the application to start.
# If any are missing, the application will throw an error and stop.

# JWT Secrets - Use strong, randomly generated secrets
# You can prefix with "base64:" if your secret is base64 encoded
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('base64'))"
JWT_ACCESS_SECRET=your-access-secret-here-replace-with-secure-random-string
JWT_REFRESH_SECRET=your-refresh-secret-here-replace-with-different-secure-random-string

# Password Hashing - Number of bcrypt salt rounds (10-12 recommended, higher = slower but more secure)
PASSWORD_HASH_ROUNDS=12

# ========================================
# OPTIONAL - Admin User Seeding
# ========================================
# These are optional. If provided, an admin user will be created on first startup
ADMIN_SEED_EMAIL=admin@example.com
ADMIN_SEED_PASSWORD=ChangeMe123!

# Development Settings
LOG_LEVEL=debug
ENABLE_CORS=true