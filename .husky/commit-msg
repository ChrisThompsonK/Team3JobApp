# Lint commit message
echo "üìù Validating commit message format..."

# Check if commit message follows conventional commits format
commit_regex='^(feat|fix|docs|style|refactor|test|chore|ci|build|perf)(\(.+\))?: .{1,50}'

if ! grep -qE "$commit_regex" "$1"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Commit message should follow conventional commits format:"
    echo "  <type>[optional scope]: <description>"
    echo ""
    echo "Examples:"
    echo "  feat: add user authentication"
    echo "  fix(api): resolve database connection issue"
    echo "  docs: update README with installation steps"
    echo ""
    echo "Types: feat, fix, docs, style, refactor, test, chore, ci, build, perf"
    echo ""
    exit 1
fi

echo "‚úÖ Commit message format is valid!"
