# Run code quality checks before commit
echo "ğŸ” Running pre-commit checks..."

# Run lint-staged (only on staged files)
echo "ğŸ“‹ Checking staged files..."
npx lint-staged

# Run type checking (only if TypeScript files changed)
if git diff --cached --name-only | grep -q '\.tsx\?$'; then
  echo "ğŸ”§ Running TypeScript type check..."
  npm run type-check
fi

echo "âœ… Pre-commit checks passed!"
